{
  "short_name": "NeuronWeb",
  "name": "Neuron Web",
  "start_url": "./index.html",
  "display": "standalone",
  "theme_color": "#000",
  "background_color": "#fff",
  "browser_action": {
    "default_popup": "./index.html",
    "default_title": "NervosWeb"
  },
  "manifest_version": 2,
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardWrite",
    "http://**/*",
    "https://**/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
